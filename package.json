{
  "name": "nodedrop",
  "version": "1.0.23-alpha",
  "description": "A workflow automation platform - Open Source",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/node-drop/nodedrop.git"
  },
  "bugs": {
    "url": "https://github.com/node-drop/nodedrop/issues"
  },
  "homepage": "https://nodedrop.io",
  "keywords": [
    "workflow",
    "automation",
    "n8n",
    "zapier",
    "integration",
    "low-code",
    "no-code"
  ],
  "workspaces": [
    "packages/config",
    "packages/types",
    "packages/utils",
    "frontend",
    "backend",
    "cli",
    "installer"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && bun run dev",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend:npm": "npm run dev --workspace=backend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && echo 'Bun runs TypeScript directly - no build needed'",
    "build:frontend": "cd frontend && bun run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && bun run start",
    "start:frontend": "cd frontend && bun run preview",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && bun test",
    "test:frontend": "cd frontend && bun test",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.yml up --build",
    "docker:setup": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'scripts\\\\dev.bat' : 'bash scripts/dev.sh', {stdio: 'inherit'})\"",
    "docker:build:unified": "docker build -t nodedrop:local .",
    "docker:pull": "docker pull ghcr.io/node-drop/nodedrop:latest",
    "docker:run:published": "docker-compose -f docker-compose.published.yml up",
    "logs": "docker-compose logs -f",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "db:reset": "cd backend && bun run db:reset",
    "db:migrate": "cd backend && bun run db:migrate",
    "db:seed": "cd backend && bun run db:seed",
    "cli:build": "npm run build --workspace=cli",
    "cli:dev": "node scripts/nodedrop.js",
    "nodedrop": "node scripts/nodedrop.js",
    "check-version": "node scripts/check-version.js",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3"
  }
}

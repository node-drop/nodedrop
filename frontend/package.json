    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.22",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.7.2",
    "vite": "^6.4.1",
    "vitest": "^2.1.8"
  }

{
  "name": "node-drop-backend",
  "version": "1.0.0",
  "description": "Backend API for node drop workflow automation platform",
  "main": "dist/index.js",
  "bin": {
    "nd-node-cli": "dist/cli/node-cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx src/scripts/seed.ts",
    "studio": "prisma studio",
    "node-cli": "tsx src/cli/node-cli.ts",
    "nodes:register": "tsx src/scripts/register-nodes.ts",
    "nodes:register:prod": "node dist/scripts/register-nodes.js",
    "nodes:list": "tsx src/scripts/node-cli.ts list",
    "nodes:create": "tsx src/scripts/node-cli.ts create",
    "nodes:discover": "tsx src/scripts/node-cli.ts discover",
    "nodes:validate": "tsx src/scripts/node-cli.ts validate",
    "nodes:activate": "tsx src/scripts/node-cli.ts activate",
    "nodes:deactivate": "tsx src/scripts/node-cli.ts deactivate",
    "nodes:status": "tsx src/scripts/node-cli.ts status",
    "nodes:activate-all": "tsx src/scripts/node-cli.ts activate-all",
    "nodes:deactivate-all": "tsx src/scripts/node-cli.ts deactivate-all",
    "jobs:migrate": "tsx src/scripts/migrate-scheduled-jobs.ts",
    "jobs:test": "tsx test-scheduled-jobs-db.ts",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@prisma/client": "^5.6.0",
    "@types/multer": "^2.0.0",
    "abort-controller": "^3.0.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",

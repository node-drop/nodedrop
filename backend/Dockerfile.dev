FROM oven/bun:1-alpine

# Install OpenSSL for database connections
RUN apk add --no-cache openssl openssl-dev

WORKDIR /app

# Copy package files
COPY package.json bun.lock* ./

# Install dependencies
RUN bun install

# Copy source code
COPY . .

# Expose port
EXPOSE 4000

# Start development server
CMD ["bun", "run", "dev"]
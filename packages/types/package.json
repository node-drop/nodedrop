{
  "name": "@nodedrop/types",
  "version": "1.0.0",
  "description": "Shared TypeScript type definitions for NodeDrop workflow automation platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "nodedrop",
    "types",
    "typescript",
    "workflow"
  ],
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}

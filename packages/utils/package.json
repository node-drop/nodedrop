{
  "name": "@nodedrop/utils",
  "version": "1.0.0",
  "description": "Shared utility functions for NodeDrop workflow automation platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./expressions/resolver.js": {
      "types": "./dist/expressions/resolver.d.ts",
      "default": "./dist/expressions/resolver.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "nodedrop",
    "utils",
    "utilities",
    "typescript",
    "workflow"
  ],
  "license": "MIT",
  "dependencies": {
    "@nodedrop/types": "^1.0.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@nodedrop/utils",
  "version": "1.0.0",
  "description": "Shared utility functions for NodeDrop workflow automation platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "nodedrop",
    "utils",
    "utilities",
    "typescript",
    "workflow"
  ],
  "license": "MIT",
  "dependencies": {
    "@nodedrop/types": "^1.0.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
